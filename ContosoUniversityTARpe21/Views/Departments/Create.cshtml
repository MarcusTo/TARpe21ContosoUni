@model ContosoUniversityTARpe21.Models.Department

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Department</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                <div class="form-group">
                    <label asp-for="Name" class="control-label"/>
                    <input asp-for="Name" class="form-control"/>
                    <span asp-validation-for="Name" class="text-danger"/>
                </div>

                <div class="form-group">
                    <label asp-for="Budget" class="control-label"/>
                    <input asp-for="Budget" class="form-control"/>
                    <span asp-validation-for="Budget" class="text-danger"/>
                </div>

                <div class="form-group">
                    <label asp-for="StartDate" class="control-label"/>
                    <input asp-for="StartDate" class="form-control" />
                    <span asp-validation-for="StartDate" class="text-danger" />
                </div>

                <div class="form-group">
                    <label asp-for="InstructorID" class="control-label"/>
                    <select asp-for="InstructorID" class="form-control" asp-items="ViewBag.InstructorID">
                        <option value="">--Select Administrator --</option>
                    </select>
                    <span asp-validation-for="InstructorID" class="text-danger" />
                </div>
                <div class="form-group">
                    <input type="submit" value="Create" class="btn btn-primary" />
                </div>
        </form>
    </div>
</div>